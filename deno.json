{
  "compilerOptions": {
    "lib": ["es6", "dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  },
  "include": [
    "ts/**/*"
  ],
  "exclude": [
    "index.ts"
  ],
  "tasks": {
    "start": "deno run -A build.ts && deno run -A index.ts",
    "build": "deno run -A build.ts",
    "watch": "deno run -A build.ts --watch"
  }
}